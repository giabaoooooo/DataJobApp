<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://kit.fontawesome.com/ae360af17e.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>

<body>
    <div class="row">
        <div class="col-md-12">
            <!-- Advanced Tables -->
            <button type="button" class="btn btn-outline-success" onclick="postAllow('{{this.status_id}}')">Bài đăng đã được duyệt</button>
            <button type="button" class="btn btn-outline-success" onclick="postDenied('{{this.status_id}}')">Bài đăng không được duyệt</button>
            <button type="button" class="btn btn-outline-success" onclick="postWaiting('{{this.status_id}}')">Bài đăng đang chờ duyệt</button>
            <div class="panel panel-default">
                <div class="panel-heading" style="color: white;">
                    - Danh sách các bài đăng đang chờ duyệt -
                </div>
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                            <thead>
                                <tr>
                                    <th>Tiêu Đề</th>
                                    <th>Địa Chỉ</th>
                                    <th>Tên Doanh Nghiệp</th>
                                    <th>Số Lượng</th>
                                    <th>Hình Ảnh</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each posts}}
                                <tr>
                                    <td>{{this.title}}</td>
                                    <td>{{this.andress}}</td>
                                    <td>{{this.business_name}}</td>
                                    <td>{{this.quantity}}</td>
                                    <td><img width="200" height="200" src="{{this.image}}" alt=""></td>
                                    <td>
                                        <button type="button" class="btn btn-success" onclick="AllowPost('{{this.id}}')">Duyệt Bài</button>
                                        <button type="button" class="btn btn-danger" onclick="AllowPost('{{this.id}}')">Xoá</button>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
            <!--End Advanced Tables -->
        </div>
    </div>


    <script>

        const fetchAPI = async (url, option) => {
            const res = await fetch(url, option);
            return res.json();
        }
        const confirmDelete = (id) => {
            swal({
                title: "Xác nhận xóa post?",
                text: "Xóa sẽ mất!",
                icon: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then(async (willDelete) => {
                    if (willDelete) {
                        let url = `/posts/delete/${id}`;
                        let option = {
                            method: 'DELETE'
                        }
                        let result = await fetchAPI(url, option);
                        if (result.status) {
                            swal("Xóa thành công!", {
                                icon: "success",
                            });
                            setTimeout(() => {
                                window.location.reload();
                            }, 1000);
                        } else {
                            swal("Xóa thất bại!", {
                                icon: "error",
                            });
                        }
                    }
                });
        }

        const postAllow = (id) => {
            window.location.href = `/posts/post-allow?id=${id}`;
        }
        const postWaiting = (id) => {
            window.location.href = `/posts/post-waiting?id=${id}`;
        }
        const postDenied = (id) => {
            window.location.href = `/posts/post-denied?id=${id}`;
        }

        const AllowPost = (id) => {
            window.location.href = `/posts/${id}/change-status`;
        }
    </script>
</body>

</html>